<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ViplataProject.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="ViplataProject.Pages.EmployeesPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сотрудники">

    <Grid>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2">
            <Label Content="Сотрудники"/>
            <Button Content="Выйти в меню" Click="MenuButton_Click"/>
        </StackPanel>
        <DataGrid AutoGenerateColumns="False" CanUserReorderColumns="False" IsReadOnly="True" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <materialDesign:DataGridTextColumn Header="Фамилия" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Имя" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Отчество" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Дата рождения" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Пол" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Инвалидность" Binding="{Binding}"/>
                <materialDesign:DataGridTextColumn Header="Стаж" Binding="{Binding}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
