<Window x:Class="ViplataProject.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViplataProject.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" MinHeight="450" MinWidth="800" MaxHeight="1080" MaxWidth="1920" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" Height="200" Width="250">
        <Label Content="Введите логин:"/>
        <TextBox x:Name="LoginBox" Background="White" BorderBrush="Black" />
        <Label Content="Введите пароль"/>
        <PasswordBox x:Name="PasswordBox"/>
        <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" />
        <Button x:Name="GuestButton" Content="Войти как гость" Click="GuestButton_Click"/>
    </StackPanel>
</Window>
